<script type="text/javascript">
    jQuery(document).ready(function($){
        $('.carousel').carousel();

        $('#top-navigation').on('click', 'a', function(e){
            e.preventDefault();
            $('#top-navigation li.active').removeClass('active');
            $(this).closest('li').addClass('active');
            reloadContent($(this).attr('href'));
        });

        $('#sidebar-wrapper').on('click', 'a', function(e){
            e.preventDefault();
            $('#sidebar-wrapper li.active').removeClass('active');
            $(this).closest('li').addClass('active');
            reloadContent($(this).attr('href'));
        });

        function reloadContent(linkHref)
        {
            if(linkHref != "#") {
                $.get(linkHref, function (data) {
                    $('#content').replaceWith($(data).find('#content'));
                });
            }
        }
    });
</script>

